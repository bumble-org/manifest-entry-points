{
  "manifest_version": 2,
  "name": "Reviews Checker",
  "version": "2.2.1",
  "description": "Chrome Extension to check if Amazon Items are available or blocked to review.",
  "author": "Jack and Amy Steam <jacksteamdev@gmail.com>",
  "browser_action": {
    "default_icon": "images/icon-grey-16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_page": "options.html",
  "icons": {
    "128": "images/icon-store-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "https://api.mailgun.net/v3/*",
    "https://www.amazon.com/*",
    "notifications",
    "storage",
    "tabs"
  ]
}
