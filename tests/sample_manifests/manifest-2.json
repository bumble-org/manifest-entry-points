{
  "manifest_version": 2,
  "name": "Clip Selector",
  "version": "0.0.1",
  "description": "Copies selector to clipboard",
  "author": "Jack and Amy Steam <jacksteamdev@gmail.com>",
  "browser_action": {
    "default_icon": {
      "16": "images/icon-on-16.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "notifications",
    "storage",
    "tabs"
  ],
  "icons": {
    "128": "images/icon-on-128.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
