{
  "manifest_version": 2,
  "name": "Clip64 Base64 Decoder",
  "version": "0.5.1",
  "description": "Decode Base64 to the clipboard.",
  "author": "Jack and Amy Steam <jacksteamdev@gmail.com>",
  "short_name": "Clip64",
  "browser_action": {
    "default_icon": {
      "16": "images/clip64-icon-16.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/clip64-icon-16.png",
    "48": "images/clip64-icon-48.png",
    "128": "images/clip64-icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "notifications"
  ]
}
